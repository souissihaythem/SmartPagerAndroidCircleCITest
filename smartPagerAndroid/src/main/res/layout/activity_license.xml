<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LicenseActivity"
    android:background="@android:color/white">

    <net.smartpager.android.view.ScrollingWebView
        android:id="@+id/license_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons_linearLayout" />

    <LinearLayout
        android:id="@+id/buttons_linearLayout"
        style="@style/style_buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <com.rey.material.widget.Button
            app:v_styleId="@array/button_flat"
            android:id="@+id/license_decline_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/selector_red_buttom"
            android:minHeight="56dp"
            android:minWidth="144dp"
            android:text="@string/decline"
            android:textColor="@color/white_text" />

        <com.rey.material.widget.Button
            app:v_styleId="@array/button_flat"
            android:id="@+id/license_agree_button"
            style="@style/style_big_green_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="@string/agree" />
    </LinearLayout>

</RelativeLayout>