<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_dark_gray_background"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
    >
    <TextView 
        android:id="@+id/item_auto_response_text_view"
        android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
	    android:layout_toLeftOf="@+id/item_auto_response_radiobutton"
	    android:textColor="@color/quick_response_item_text"
        />
	<RadioButton 
	    android:id="@+id/item_auto_response_radiobutton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:clickable="false"
	    android:focusable="false"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
	    />
</RelativeLayout>    