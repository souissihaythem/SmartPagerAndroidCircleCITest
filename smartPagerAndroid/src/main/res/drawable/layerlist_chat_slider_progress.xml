<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/player_chat_border" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/player_chat_border" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <stroke
                    android:width="1dp"
                    android:color="@color/player_chat_border" />
                <gradient
                    android:angle="-90"
                    android:endColor="@color/player_chat_gradient_dark"
                    android:startColor="@color/player_chat_gradient_light" />
            </shape>
        </clip>
    </item>

</layer-list>